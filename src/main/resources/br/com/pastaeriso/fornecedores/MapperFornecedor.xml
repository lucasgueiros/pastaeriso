<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="br.com.pastaeriso.fornecedores.MapperFornecedor">

  <resultMap id="FornecedorMap" type="Fornecedor">
    <id property="id" column="id" javaType="Integer"/>
    <result property="fornecedor" column="fornecedor" javaType="String"/>
    <result property="cnpj" column="cnpj" javaType="String"/>
    <result property="comentario" column="comentario" javaType="String"/>
    <collection property="contatos" ofType="Contato" column="id"
      javaType="ArrayList"
      select="selectContatosByFornecedorId"/>
    <collection property="enderecos" ofType="Endereco" column="id"
      javaType="ArrayList"
      select="selectEnderecosByFornecedorId"/>
  </resultMap>

  <select id="selectEnderecosByFornecedorId"
    resultMap="br.com.pastaeriso.clientes.enderecos.EnderecoMapper.enderecoMapper"
    parameterType="Integer">
    select id,nome,rua,numero,bairro,complemento,ponto_de_referencia,comentarios,tipo_de_endereco
    from cliente_enderecos
    where id=#{id}
  </select>

  <select id="selectContatosByFornecedorId"
    resultMap="br.com.pastaeriso.clientes.contatos.ContatoMapper.contatoMapper"
    parameterType="Integer">
    select id,forma from formas_de_contato where id=#{id}
  </select>

  <select id="selectFornecedorPorId" resultMap="FornecedorMap" parameterType="Integer">
    select id, insumo_quantidade_id, datahora
    from fornecedores
    where id = #{id}
  </select>
</mapper>
